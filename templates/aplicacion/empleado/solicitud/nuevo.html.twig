{% extends 'aplicacion/base.html.twig' %}
{% block title %}{{ esEdicion ? 'EDITAR SOLICITUD' : 'NUEVA SOLICITUD' }}{% endblock %}
{% block content %}
    {{ form_start(form) }}
    <div class="row mt-2">
    <section class="panel">
    <div class="panel-heading">
        <div class="panel-title">
            <h2 class="panel-title">{{ esEdicion ? 'EDITAR SOLICITUD' : 'SOLICITUD NUEVA' }}</h2>
        </div>
    </div>
    <div class="panel-body">
        <div class="row form-group form-group-sm">
            <label class="col-sm-2 control-label">Tipo:</label>
            <div class="col-sm-4">
                <select name="solicitudTipo" class="form-control" required>
                    <option value="">Seleccione...</option>
                    {% for arrSolicitudTipo in arrSolicitudEmpleadoTipos %}
                        <option value="{{ arrSolicitudTipo.codigoSolicitudEmpleadoTipoPk }}"
                                {% if esEdicion and solicitudTipoActual == arrSolicitudTipo.codigoSolicitudEmpleadoTipoPk %}selected{% endif %}>
                            {{ arrSolicitudTipo.nombre }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row form-group form-group-sm">
            <label class="col-sm-2 control-label">Desde:</label>
            <div class="col-sm-4">
                {{ form_widget(form.fechaDesde) }}
                {{ form_errors(form.fechaDesde) }}
            </div>
            <label class="col-sm-2 control-label">Hasta:</label>
            <div class="col-sm-4">
                {{ form_widget(form.fechaHasta) }}
                {{ form_errors(form.fechaHasta) }}
            </div>
        </div>
        <div class="row form-group form-group-sm">
            <label class="col-sm-2 control-label">Comentario:</label>
            <div class="col-sm-10">
                {{ form_widget(form.comentario) }}
                {{ form_errors(form.comentario) }}
            </div>
        </div>
        <div class="col-xl-12 col-sm-12 text-right mt-2">
            <a href="{{ path('empleado_solicitud_lista') }}" class=" btn btn-sm btn-default"
               title="regresar a la lista"> Cancelar</a>
            {{ form_widget(form.btnGuardar, { 'label': esEdicion ? 'Actualizar' : 'Guardar' }) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}